<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EffectiveMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey6</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Title1">
        <item name="fontFamily">@font/sf_pro_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Title2">
        <item name="fontFamily">@font/sf_pro_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Title3">
        <item name="fontFamily">@font/sf_pro_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Title4">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text1">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text2">
        <item name="fontFamily">@font/sf_pro_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text3">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text4">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonText1">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ButtonText2">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TabText">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">10sp</item>
    </style>
