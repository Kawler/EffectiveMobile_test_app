<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/rv_main_tickets_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Фото поездки"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/rv_main_tickets_name"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/Text2"
        android:text="Die Antwoord"/>

    <TextView
        android:id="@+id/rv_main_tickets_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:text="Будапешт"
        style="@style/Text3"/>

    <TextView
        android:id="@+id/rv_main_tickets_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:text="от 22 264 ₽"
        style="@style/Text3"
        app:drawableStartCompat="@drawable/ic_tickets"
        app:drawableTint="@color/grey6" />

</LinearLayout>